        <EditText
            android:id="@+id/editTextAddFriendID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginTop="10px"
            android:hint="Enter friend ID"
            android:textColor="#FFFFFF"
            android:minHeight="48dp"
            android:paddingStart="20dp"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_signin_button"
            android:text="Add friend"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:src="@drawable/qr_code_scan_icon" />
        <Button
            android:id="@+id/btnDeleteFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/custom_signin_button"
            android:text="Delete friend"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:src="@drawable/qr_code_scan_icon" />
    </LinearLayout>
