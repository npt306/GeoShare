<!--        android:id="@+id/recycles_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:orientation="vertical">

        <!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="#2D383E"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_marginTop="2dp"-->
<!--            android:layout_marginRight="2dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:src="@drawable/qr_code_scan_icon" />-->
        <EditText
            android:id="@+id/editTextAddFriendID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginTop="10px"
            android:hint="Enter friend ID"
            android:textColor="#FFFFFF"
            android:minHeight="48dp"
            android:paddingStart="20dp"
            android:textColorHint="#FFFFFF" />
        <Button
            android:id="@+id/btnFindFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_signin_button"
            android:text="Find"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/qr_code_scan_icon" />

        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_signin_button"
            android:text="Add new friend"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/qr_code_scan_icon" />
        <Button
            android:id="@+id/btnDeleteFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_signin_button"
            android:text="Delete friend"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/qr_code_scan_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUserFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="350dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!--        <ImageButton-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="#2D383E"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_marginTop="2dp"-->
        <!--            android:layout_marginRight="2dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:src="@drawable/qr_code_scan_icon" />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User found"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@id/invite_friend_profile_image"
            android:layout_toEndOf="@id/invite_friend_profile_image"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/invite_friend_profile_image"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/invite_friend_username"
                android:text="Username"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/invite_friend_profile_image"
                android:layout_toEndOf="@id/invite_friend_profile_image"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/invite_unfriend_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/invite_button"
                android:text="Invite" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>