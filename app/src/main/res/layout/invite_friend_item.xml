<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/friend_profile_image"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invite_friend_username"
        android:text="Username"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/friend_profile_image"
        android:layout_toEndOf="@id/friend_profile_image"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/friend_viewProfile_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/invite_viewprofile_button"
            android:text="Profile" />

        <Button
            android:id="@+id/friend_unfriend_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/invite_unfriend_button"
            android:text="Unfriend" />
    </LinearLayout>

</RelativeLayout>