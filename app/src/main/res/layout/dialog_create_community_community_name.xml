<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/avatarlayout_border_radius"
    android:padding="20dp">

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/etCommunityName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_signin_editext"
        android:textColorHint="#C6C6C6"
        android:layout_marginBottom="20dp"
        android:hint="Enter community name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelCommunityName"
            android:layout_width="150dp"
            android:background="@drawable/custom_signin_button"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Cancel" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnUpdateCommunityName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/custom_signin_button"
            android:text="Update" />

    </LinearLayout>



</LinearLayout>