<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101D25">

        <LinearLayout
            android:id="@+id/signUpLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:fontFamily="@font/stackyard"
                android:gravity="center"
                android:letterSpacing="0."
                android:text="Join with us"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editTextSignUpUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:background="@drawable/custom_signin_editext"
                android:hint="Username"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColorHint="#FFC6C6C6" />

            <EditText
                android:id="@+id/editTextSignUpDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:background="@drawable/custom_signin_editext"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Date of birth"
                android:inputType="date"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColorHint="#FFC6C6C6" />

            <EditText
                android:id="@+id/editTextSignUpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:background="@drawable/custom_signin_editext"
                android:hint="Email"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColorHint="#FFC6C6C6" />

            <EditText
                android:id="@+id/editTextSignUpPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:background="@drawable/custom_signin_editext"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColorHint="#FFC6C6C6" />

            <EditText
                android:id="@+id/editTextSignUpConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:layout_marginRight="30px"
                android:background="@drawable/custom_signin_editext"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColorHint="#FFC6C6C6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBackToSignIn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/custom_signin_button"
                    android:text="BACK"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:background="@drawable/custom_signup_button"
                    android:text="SIGN UP"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/ad_banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>