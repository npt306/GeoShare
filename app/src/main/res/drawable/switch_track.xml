<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Match this with your Switch height to get a rounded look -->
            <solid android:color="#007FFF"/> <!-- Track color when checked -->
            <size android:height="30dp"/> <!-- Track thickness -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#B4B4B4"/> <!-- Track color when unchecked -->
            <size android:height="30dp"/>
        </shape>
    </item>
</selector>
